<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeetUp_LocalStorage.Views.LocalStorageStringSave"
             Title="Kayıt Ekleme İşlemleri">

    <ContentPage.Content>
        <StackLayout Padding="10">
            <StackLayout HorizontalOptions="Center">
                <Label Text="MeetUp Xamarin Local Storage" FontAttributes="Bold" />
            </StackLayout>
            <StackLayout>
                <Label Text="İsim" />
                <Entry x:Name="txtName" />
                <Label Text="Soyisim" />
                <Entry x:Name="txtSurname" />
            </StackLayout>

            <StackLayout>
                <Button Text="Kaydet" x:Name="btnSave" Clicked="BtnSave_OnClicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>